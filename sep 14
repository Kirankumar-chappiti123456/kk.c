vowels using *ptr


#include <stdio.h>

int main()
{
    char a;
    scanf("%c",&a);
    char* ptr=&a;
    if(*ptr=='a'||*ptr=='e'||*ptr=='i'|| *ptr=='o'|| *ptr=='u'||*ptr=='A'||*ptr=='E'||*ptr=='I'|| *ptr=='O'|| *ptr=='U')
    {
        printf("vowels are a,e,i,o,u: %c",*ptr);
    }
else
{
    printf("not vowels");
}
    return 0;
}
